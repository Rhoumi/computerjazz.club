---
layout: layouts/base.njk
pagination:
  data: artists
  size: 1
  alias: artist
permalink: "/artists/{{ artist.id }}/"
---

<article class="artist">
    <header class="artist-header">
        {% if artist.imageUrl %}
        <div class="artist-image-container">
            <img src="{{ artist.imageUrl }}" alt="{{ artist.name }}" class="artist-image">
        </div>
        {% endif %}
        <div class="artist-info">
            <h1 class="artist-name">{{ artist.name }}</h1>
            {% if location %}<p class="artist-location">{{ artist.location }}</p>{% endif %}
            {% if artist.tags %}
                <p class="artist-genres">
                {% if artist.tags is iterable and artist.tags is not string %}
                    {{ artist.tags | join(", ") }}
                {% else %}
                    {{ artist.tags }}
                {% endif %}
                </p>
            {% endif %}
            {% if artist.url %}
                <p class="artist-website">
                    <a href="{{ artist.url }}" target="_blank" rel="noopener">{{ artist.url }}</a>
                </p>
            {% endif %}
           
        </div>
        // loop on album
        {% if artist.albums.length > 0 %}
            <section class="artist-discography">
                <h2>Discography</h2>
                <div class="album-grid">
                {% for album in artist.albums %}
                    <div class="album-card">
                        <a href="/album/{{ album.id }}" class="album-link">
                            {% if album.imageUrl %}
                            <img src="{{ album.imageUrl }}" alt="{{ album.name }} cover" class="album-cover-thumb">
                            {% endif %}
                            <div class="album-card-info">
                                <h3 class="album-title">{{ album.name }}</h3>
                                {% if album.release_date %}
                                <p class="album-date">{{ album.release_date | date("%Y") }}</p>
                                {% endif %}
                            </div>
                        </a>
                    </div>
                {% endfor %}
                </div>
            </section>
        {% endif %}
    </header>
</article>